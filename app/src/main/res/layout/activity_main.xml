<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CDCACA"
    tools:context=".MainActivity" >

    <View
        android:id="@+id/view3"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="#EFE5E5" />

    <TextView
        android:id="@+id/txtVisor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/view3"
        android:layout_alignEnd="@+id/view3"
        android:layout_alignRight="@+id/view3"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:maxLength="10"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/view3"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="121dp"
        android:text="7"
        android:textSize="18sp"
        app:backgroundTint="#2196F3"
        app:cornerRadius="1000dp" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/btn6"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="21dp"
        android:text="3"
        android:textSize="18sp"
        app:backgroundTint="#2196F3"
        app:cornerRadius="10dp" />

    <Button
        android:id="@+id/btnPonto"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/btn3"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="21dp"
        android:text=".,"
        android:textSize="24sp"
        app:backgroundTint="#3F51B5" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/btn7"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="20dp"
        android:text="6"
        android:textSize="18sp"
        app:backgroundTint="#2196F3"
        app:cornerRadius="10dp" />

    <Button
        android:id="@+id/btnSubtracao"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/btnMultiplicacao"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/btn1"
        android:layout_toRightOf="@+id/btn1"
        android:text="-"
        android:textSize="24sp"
        app:backgroundTint="#3F51B5" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/btn4"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/btn2"
        android:layout_toRightOf="@+id/btn2"
        android:text="1"
        android:textSize="18sp"
        app:backgroundTint="#2196F3"
        app:cornerRadius="10dp" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/btn5"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/btn3"
        android:layout_toRightOf="@+id/btn3"
        android:text="2"
        android:textSize="18sp"
        app:backgroundTint="#2196F3"
        app:cornerRadius="10dp" />

    <Button
        android:id="@+id/btnLimpar"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_alignStart="@+id/view3"
        android:layout_alignLeft="@+id/view3"
        android:layout_alignTop="@+id/view3"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Limpar" />

    <Button
        android:id="@+id/btnAdicao"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/btnSubtracao"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/btnIgual"
        android:layout_toRightOf="@+id/btnIgual"
        android:text="+"
        android:textSize="24sp"
        app:backgroundTint="#3F51B5" />

    <Button
        android:id="@+id/btnIgual"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/btn1"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/btn0"
        android:layout_toRightOf="@+id/btn0"
        android:text="="
        android:textSize="24sp"
        app:backgroundTint="#3F51B5" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/btn2"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/btnPonto"
        android:layout_toRightOf="@+id/btnPonto"
        android:text="0"
        android:textSize="18sp"
        app:backgroundTint="#2196F3"
        app:cornerRadius="10dp" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/btn8"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/btn6"
        android:layout_toRightOf="@+id/btn6"
        android:text="5"
        android:textSize="18sp"
        app:backgroundTint="#2196F3"
        app:cornerRadius="10dp" />

    <Button
        android:id="@+id/btnMultiplicacao"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/btnDivisao"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/btn4"
        android:layout_toRightOf="@+id/btn4"
        android:text="*"
        android:textSize="24sp"
        app:backgroundTint="#3F51B5" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/btn9"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/btn5"
        android:layout_toRightOf="@+id/btn5"
        android:text="4"
        android:textSize="18sp"
        app:backgroundTint="#2196F3"
        app:cornerRadius="10dp" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignTop="@+id/btn7"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/btn7"
        android:layout_toRightOf="@+id/btn7"
        android:text="8"
        android:textSize="18sp"
        app:backgroundTint="#2196F3"
        app:cornerRadius="10dp" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignTop="@+id/btn7"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/btn8"
        android:layout_toRightOf="@+id/btn8"
        android:text="9"
        android:textSize="18sp"
        app:backgroundTint="#2196F3"
        app:cornerRadius="10dp" />

    <Button
        android:id="@+id/btnDivisao"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignTop="@+id/btn7"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/btn9"
        android:layout_toRightOf="@+id/btn9"
        android:text="/"
        android:textSize="24sp"
        app:backgroundTint="#3F51B5" />
</RelativeLayout>